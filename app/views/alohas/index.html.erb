<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "img/1920/1.jpg" , class: "carousel_image" %>
      <span class="carousel-caption row-fluid">
      </span>
    </div>

    <div class="item">
      <%= image_tag "img/1920/2.jpg", class: "carousel_image" %>
      <span class="carousel-caption row-fluid">
        
      </span>
    </div>

    <div class="item">
      <%= image_tag "img/1920/3.jpg", class: "carousel_image" %>
      <span class="carousel-caption row-fluid">
        
      </span>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" id="my-left-chevron" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" id="my-right-chevron" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

