
<div class="spaces"></div>

<h1 class="text-center">Instagram<small> Instant photogram?</small></h1>

<div class="spaces"></div>

<% if user_signed_in? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Image</th>
          <th>Link</th>
          <th>Text</th>
          <th>Datetime</th>
          <th colspan="3">Admin Tools</th>
        </tr>
      </thead>
      <tbody>
        <% @igrams.each do |igram| %>
          <tr>
            <td><%= image_tag igram.image_path, {height: 50} %></td>
            <td><%= igram.link %></td>
            <td><%= igram.text %></td>
            <td><%= igram.dateTime %></td>
            <td><%= link_to 'Show', igram %></td>
            <td><%= link_to 'Edit', edit_igram_path(igram) %></td>
            <td><%= link_to 'Destroy', igram, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<br>


<div class="container">
  <% @igram_sets.each do |igs| %>
    <div class="row">
      <% igs.each do |ig| %>
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 id="large-title"><%= ig.dateTime.strftime("%m/%d/%y") %></h4>
            </div>
            <div class="panel-body" id="event-body">
              <div class="theoverflower">
                  <div id="theoverlayer">
                    <%= link_to '', ig, class: "my-link" %>
                    <div class="text-center">
                      <br>
                      <%= ig.text %>
                    </div>
                  </div>
                  <div class="text-center">
                    <% if !ig.image_path.file.nil? %>
                      <%= image_tag ig.image_path %>
                    <% else %>
                      <%= image_tag "default.jpg" %>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>