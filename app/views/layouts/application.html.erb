<!DOCTYPE html>
<html>
<head>
  <title>Danny Carvalho Music</title>
  <%= javascript_include_tag 'pace' %>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'icon.ico' %>
</head>
<body>
  <div class="navbar-wrapper">
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0px;">
        <div class="container">
          <div class="navbar-header">
            <%= link_to :root , {class: "navbar-brand animated zoomInLeft", id:"header-icon"} do %>
            <%= image_tag "icon.png" %>
            <% end %>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Danny Carvalho", :root, class: "navbar-brand"%>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to 'Gigs', events_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Media <span class="caret"></span></a>
                <ul class="dropdown-menu animated fadeIn" id="my-menu">
                  <li><%= link_to 'Videos', videos_path %></li>
                  <li><%= link_to 'Music', albums_path %></li>
                  <li><%= link_to 'Photos', photos_path %></li>
                  <li><%= link_to 'Instagram', igrams_path %></li>
                  <% if user_signed_in? %>
                    <li><%= link_to 'All Songs', songs_path %></li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to 'Blog', blogs_path %></li>
              <li><%= link_to 'Store', products_path %></li>
              <li><%= link_to 'About Me', about_path %></li>
              <% if user_signed_in? %>
                <li><%= link_to 'Admin', current_user %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#"><i class="fa fa-lg fa-facebook"></i></a></li>
              <li><a href="#"><i class="fa fa-lg fa-twitter"></i></a></li>
              <li><a href="#"><i class="fa fa-lg fa-tumblr"></i></a></li>
              <li><a href="#"><i class="fa fa-lg fa-instagram"></i></a></li>
              <li><a href="#"><i class="fa fa-lg fa-youtube"></i></a></li>
              <li><a href="#"><i class="fa fa-lg fa-soundcloud"></i></a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>

  <%= yield %>

  <div id = "share_buttons">
    <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseShareButtons" aria-expanded="false" aria-controls="collapseShareButtons">
      <i class="fa fa-lg fa-share-alt"></i> Share
    </button>
    <div class="collapse" id="collapseShareButtons">
      <%= render "layouts/sharebuttons" %>
    </div>
  </div>

  <div class="jumbotron container-fluid" id="jumbotron-footer-bottom">
    <br>
    <div class="text-center spaces">
      <div class="social">
        <ul>
          <li><a href="#"><i class="fa fa-lg fa-facebook"></i></a></li>
          <li><a href="#"><i class="fa fa-lg fa-twitter"></i></a></li>
          <li><a href="#"><i class="fa fa-lg fa-tumblr"></i></a></li>
          <li><a href="#"><i class="fa fa-lg fa-instagram"></i></a></li>
          <li><a href="#"><i class="fa fa-lg fa-youtube"></i></a></li>
          <li><a href="#"><i class="fa fa-lg fa-soundcloud"></i></a></li>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <div class="social">
        <ul>
          <li><%= link_to 'about', :about %> </li>
          <li><%= link_to 'gigs', events_path %></li>
          <li><%= link_to 'music', albums_path %> </li>
          <li><%= link_to 'videos', videos_path %></li>
          <li><%= link_to 'photos', photos_path %> </li>
          <li><%= link_to 'instgram', igrams_path %> </li>
          <li><%= link_to 'blog', blogs_path %> </li>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <i class="fa fa-copyright"></i>2015 Danny Carvalho
    </div>
    <br>
  </div>
</body>
</html>


