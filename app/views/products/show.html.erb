<div class="spaces"></div>

<div class="container">
  <h1 class="text-center"><%= @product.name %></h1>
  <br>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image_filepath.standard.to_s, class: 'img-responsive', id: 'product-image' %>
      <br>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= @product.name %>
        </div>
        <div class="panel-body" id="product-panel">
          <%= @product.data %>
          <br>
          <br>
          <span class="lead"><%= @product.price %></span>
          <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="hosted_button_id" value=<%= @product.paypal %>>
            <input type="image" src="https://res.cloudinary.com/velaseriat/image/upload/v1439329958/addtocart_t0balc.png" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
          </form>

          
        </div>
        <div class="panel-footer">
          Available: <%= " - " + @product.release.strftime("%m/%d/%y") %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 id="large-title">Disqus</h4>
    </div>
    <div class="panel-body" id="disqus">
    </div>
    <div class="panel-footer">
    </div>
  </div>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>
  <%= link_to 'All Products', products_path %>
</div>