<div class="spaces"></div>

<div class="container">
  <h1 class="text-center"><%= @product.name %></h1>
  <br>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image_filepath.standard.to_s, class: 'img-responsive', id: 'product-image' %>
      <br>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= @product.name %>
        </div>
        <div class="panel-body" id="product-panel">
          <%= @product.data %>
          <br>
          <br>
          <span class="lead"><%= @product.price %></span>
          <%= button_to "Add to cart", '#', class: 'btn btn-primary',  method: 'get' %>
          
        </div>
        <div class="panel-footer">
          Available: <%= " - " + @product.release.strftime("%m/%d/%y") %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 id="large-title">Disqus</h4>
    </div>
    <div class="panel-body" id="disqus">
    </div>
    <div class="panel-footer">
    </div>
  </div>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>
  <%= link_to 'All Products', products_path %>
</div>